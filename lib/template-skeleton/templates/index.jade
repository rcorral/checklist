doctype html
html(lang='en')
    head
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0', initial-scale='1.0')
        base(href="#{sd.APP_URL}/")
        title=title
        meta(name='description', content=description)

        link(href='#{sd.APP_URL}/assets/bundle.css', rel='stylesheet', type='text/css')

        //- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
        //- WARNING: Respond.js doesn't work if you view the page via file://
        <!--[if lt IE 9]>
        script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
        script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
        <![endif]-->

    - if (!componentClassName) {componentClassName = appName;}
    - var bodyClass = componentClassName + '-component';
    body(class=bodyClass)
        header
            != navbarView

        .container-fluid.components-container
            main(class='row main')
                .app-wrapper
                    if appView
                        div(class='app-#{componentClassName}')
                            != appView

        != sharify.script()

        link(href='//fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
        link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet', type='text/css')

        script(src='#{sd.APP_URL}/assets/vendor.js')
        script(src='#{sd.APP_URL}/assets/bundle.js')
